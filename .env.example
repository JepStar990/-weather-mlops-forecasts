# Core
DATABASE_URL=postgresql://<user>:<password>@<host>/<db>
PUBLICPUBLIC_REPO_NAME=weather-mlops-forecasts

# API keys (leave blank if unused)
OPENWEATHER_API_KEY=
VISUAL_CROSSING_API_KEY=

# Required headers
MET_NO_USER_AGENT=your-app/0.1 (email@example.com)
NWS_USER_AGENT=your-app/0.1 (email@example.com)

# DagsHub (MLflow-compatible)
DAGSHUB_USERNAME=
DAGSHUB_TOKEN=

# Config JSON
TARGET_LOCATIONS=[{"name":"Johannesburg","lat":-26.2041,"lon":28.0473},{"name":"Cape Town","lat":-33.9249,"lon":18.4241},{"name":"Durban","lat":-29.8587,"lon":31.0218},{"name":"Pretoria","lat":-25.7479,"lon":28.2293},{"name":"Gqeberha","lat":-33.9608,"lon":25.6022},{"name":"Bloemfontein","lat":-29.0852,"lon":26.1596},{"name":"Polokwane","lat":-23.9045,"lon":29.4689},{"name":"Mbombela","lat":-25.4745,"lon":30.9690},{"name":"East London","lat":-33.0153,"lon":27.9116}]
VARIABLES=["temp_2m","wind_speed_10m","precipitation"]
HORIZONS_HOURS=[1,3,6,12,24,48,72]

# Timezone (display only)
LOCAL_TIMEZONE=Africa/Johannesburg

# Safety controls
REQUESTS_CONCURRENCY=4
REQUESTS_TIMEOUT=30
